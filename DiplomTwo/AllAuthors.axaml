		x:CompileBindings="False"
		WindowState="Maximized"
		Name="AllAuthorsIcon"
        Title="BookNest">
	<ScrollViewer>
		<StackPanel>
			<StackPanel Height="745" Background="#E4EAFF">

				<StackPanel VerticalAlignment="Top" Margin="0,16,0,0"  Width="1125" Height="77" Orientation="Horizontal">
					<TextBlock Foreground="#042A99" FontSize="64">BookNest</TextBlock>


					<StackPanel Orientation="Horizontal" Background="#E4EAFF" VerticalAlignment="Top" Margin="127,38,0,0" Height="29" Width="382">
						<Button Height="40" Background="#E4EAFF" VerticalAlignment="Center" Foreground="#042A99" FontSize="24">Дом</Button>
						<Button Height="40" Background="#E4EAFF"  Margin="32,0,0,0" VerticalAlignment="Center" Foreground="#042A99" FontSize="24">Книги</Button>
